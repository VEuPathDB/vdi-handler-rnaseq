#!/usr/bin/perl

use strict;
use DBI;
use FindBin;
use lib "$FindBin::Bin/../lib/perl";
use BigWigUtils;


my @envVars = ('DB_HOST', 'DB_PORT', 'DB_NAME', 'DB_PLATFORM', 'DB_USER', 'DB_PASS', 'USER_DATASETS_DIR');

my ($userDatasetId) = @ARGV;

usage() unless scalar(@ARGV) == 1;

for my $envVar (@envVars) { die "Missing env variable '$envVar'\n" unless $ENV{$envVar}; }

##################################################
# remove from file system
##################################################
deleteUserDatasetDir("$ENV{USER_DATASETS_DIR}/$userDatasetId");

##################################################
# remove from appdb
##################################################

my $dbh = DBI->connect("dbi:$ENV{DB_PLATFORM}://$ENV{DB_HOST}:$ENV{DB_PORT}/$ENV{DB_NAME}", $ENV{DB_USER}, $ENV{DB_PASS})
    || die "Couldn't connect to database: " . DBI->errstr;
$dbh->{RaiseError} = 1;

my $deleteProtocolAppNodes = $dbh->prepare(<<EOF);
    delete from apidbUserDatasets.UD_ProtocolAppNode
    where profile_set_id
          in (select profile_set_id
              from apidbUserDatasets.ud_ProfileSet
              where user_dataset_id = ?)
EOF


my $deleteNaFeatureExpression = $dbh->prepare(<<EOF);
    DELETE from ApiDBUserDatasets.UD_NAFeatureExpression
    WHERE protocol_app_node_id in (select protocol_app_node_id 
                                   from apidbUserDatasets.UD_ProtocolAppNode
                                   where profile_set_id
                                         in (select profile_set_id
                                             from apidbUserDatasets.ud_ProfileSet
                                             where user_dataset_id = ?))
EOF

my $deleteProfileSet = $dbh->prepare(<<EOF);
    DELETE from ApiDBUserDatasets.UD_ProfileSet
    WHERE user_dataset_id = ?
EOF

print STDERR "deleting from table ApiDBUserDatasets.UD_NAFeatureExpression\n";
$deleteNaFeatureExpression->execute($userDatasetId);

print STDERR "deleting from table apidbUserDatasets.UD_ProtocolAppNode\n";
$deleteProtocolAppNodes->execute($userDatasetId);

print STDERR "deleting from table ApiDBUserDatasets.UD_ProfileSet\n";
$deleteProfileSet->execute($userDatasetId);

$dbh->commit;

sub usage {

  my $envStr = join(", \$", @envVars);

  die "
Uninstall an RNA Seq user dataset from the AppDB user dataset schema, and from jbrowse track files.

Usage: uninstall user_dataset_id 

Where:
  user_dataset_id:  a user dataset id

Env: \$$envStr

";
}

